    <script>
        function addHack() {
            const terminal = document.getElementById('terminalContent');
            const hacks = [
                `<div class="command-line"><span class="prompt">></span><span class="command">sudo make-me-a-sandwich</span></div>
                <div class="output error">Error: insufficient bread in /dev/bread</div>
                <div class="output success">Creating virtual bread... üçû</div>`,

                `<div class="command-line"><span class="prompt">#</span><span class="command">ping facebook.com --packets=infinite</span></div>
                <div class="output">Pinging Mark Zuckerberg's mainframe...</div>
                <div class="output">He says: "Stop stealing my hoodies!" üëï</div>`,

                `<div class="command-line"><span class="prompt">$</span><span class="command">crack-wifi --password="password123" --obvious=true</span></div>
                <div class="output success">Success! Password was "password123" (who would have thought?!)</div>
                <div class="output">Neighbor's WiFi: "FBI Surveillance Van" connected! üöê</div>`,

                `<div class="command-line"><span class="prompt">Œª</span><span class="command">hack-time --travel --year=1995 --dialup-sound=true</span></div>
                <div class="output">EEEEEE-OOOO-EEEEEE-SCREECH-BZZZZZZZ</div>
                <div class="output">You've been disconnected! Someone picked up the phone! üìû</div>`,

                `<div class="command-line"><span class="prompt">></span><span class="command">steal --item="moon" --from="sky"</span></div>
                <div class="output">ERROR: Moon too heavy (also, werewolves are protecting it) üåïüê∫</div>`,

                `<div class="command-line"><span class="prompt">$</span><span class="command">matrix --pill="red" --follow-the-white-rabbit</span></div>
                <div class="output">Knock, knock, Neo... üêá</div>
                <div class="output success">You're now wearing a cool trenchcoat and sunglasses! üï∂Ô∏è</div>`
            ];
            
            const randomHack = hacks[Math.floor(Math.random() * hacks.length)];
            terminal.insertAdjacentHTML('beforeend', randomHack);
            
            // Add glitch effect
            terminal.classList.add('glitch');
            setTimeout(() => terminal.classList.remove('glitch'), 200);
            
            // Scroll to bottom
            terminal.scrollTop = terminal.scrollHeight;
        }

        // Auto-add a random hack every 10 seconds
        setInterval(addHack, 10000);

        // Easter egg - Konami code
        let konami = [];
        document.addEventListener('keydown', function(e) {
            konami.push(e.keyCode);
            if (konami.toString().indexOf("38,38,40,40,37,39,37,39,66,65") >= 0) {
                document.body.style.background = "linear-gradient(135deg, #ff00ff 0%, #00ffff 100%)";
                alert("üéÆ KONAMI CODE ACTIVATED! ULTIMATE HACKER POWERS UNLOCKED! üéÆ");
            }
